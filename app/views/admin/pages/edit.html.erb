<h1>Editing page</h1>

<% form_for :page, :url => admin_page_url(@page), :html => {:method => :put} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', admin_page_url(@page) %> |
<%= link_to 'Back', admin_pages_path %>
