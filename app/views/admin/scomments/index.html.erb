<h1>Listing scomments</h1>

<table>
  <tr>
    <th>User</th>
    <th>Status</th>
    <th>Content</th>
  </tr>

<% @scomments.each do |scomment| %>
  <tr>
    <td><%=h scomment.user_id %></td>
    <td><%=h scomment.status_id %></td>
    <td><%=h scomment.content %></td>
    <td><%= link_to 'Show', scomment %></td>
    <td><%= link_to 'Edit', edit_scomment_path(scomment) %></td>
    <td><%= link_to 'Destroy', scomment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New scomment', new_scomment_path %>