<h1>Listing vcomments</h1>

<table>
  <tr>
    <th>User</th>
    <th>Video</th>
    <th>Content</th>
  </tr>

<% @vcomments.each do |vcomment| %>
  <tr>
    <td><%=h vcomment.user_id %></td>
    <td><%=h vcomment.video_id %></td>
    <td><%=h vcomment.content %></td>
    <td><%= link_to 'Show', vcomment %></td>
    <td><%= link_to 'Edit', edit_vcomment_path(vcomment) %></td>
    <td><%= link_to 'Destroy', vcomment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New vcomment', new_vcomment_path %>