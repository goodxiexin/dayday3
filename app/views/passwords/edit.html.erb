<p>Set your new password</p>

<% form_tag url_for(:controller => 'passwords', :action => 'update'), :method => :put do |f| -%> 
  <%= hidden_field_tag :password_reset_code, params[:password_reset_code] %>
  <p>Password: <%= password_field_tag :password %></p>
  <p>Confirm Password: <%= password_field_tag :password_confirmation %></p>
  <%= submit_tag "Reset Your Password" %> 
<% end -%> 
