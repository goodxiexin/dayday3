<h3>Current Icon:</h3>
<hr/>
<p><%= link_to image_tag(icon_path(@user)), user_icons_url(@user) %></p>
Go to your <%= link_to 'icon album', user_icons_url(@user) %> !!!

<h3>Change Icon:</h3>
<hr/>
<% form_for :icon, :url => user_icons_url(@user, :format => 'js', :album => params[:album]), :html => {:multipart => true, :target => 'upload_frame'} do |f| %>
  <%= f.label 'support jpg, gif, png maxium size is 4MB' %><br/>
  <%= f.file_field 'uploaded_data', :size => 20 %><br/>
  <%= f.submit 'upload' %>
<% end %>

<iframe id='upload_frame' name='upload_frame' style='width:1px;height:1px;border:0px' src="about:blank"></iframe>

