<% owner = (@user == current_user)? 'my' : "#{@user.login}'s" %>
<div class='fby'>
  <h3>Icon: <%= link_to_function 'fold', "$('side_icon').toggle();if(this.innerHTML == 'fold') this.update('unfold'); else this.update('fold');", :class => 'hide-all'%></h3>
  <div id='side_icon'>
    <p id='user_icon' style="text-align:center"><%= user_icon(@user, :medium) %></p>
    <li><%= image_tag 'status.gif'%><%= link_to "#{owner} statuses", user_statuses_url(@user) %></li>
    <% if @user == current_user %>
      <li><%= image_tag 'blog.gif' %><%= link_to "my friends statuses", user_status_feeds_url(@user) %></li>
    <% end %>
  </div>
</div>

